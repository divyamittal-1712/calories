<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".activity.Signup">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/design_default_color_primary"
        android:visibility="gone" />

    <TextView
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up !"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-smallcaps"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/login_txt"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:background="@drawable/edittext"
                android:textColor="@color/black"
                android:padding="15sp"
                android:layout_marginHorizontal="20dp"
                android:inputType="text"
                android:hint="Name"
                android:textColorHint="@color/teal_700"
                android:drawablePadding="10dp"
                android:maxLength="30"
                android:elevation="5dp"
                />

            <EditText
                android:id="@+id/ed_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_below="@id/ed_name"
                android:layout_marginHorizontal="20dp"
                android:inputType="number"
                android:hint="Weight"
                android:padding="15sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:elevation="5dp"
                android:textColorHint="@color/teal_700"
                />


            <EditText
                android:id="@+id/ed_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_weight"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:hint="Age"
                android:inputType="number"
                android:maxLength="3"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/teal_700"
                android:background="@drawable/edittext"
                android:elevation="5dp"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/ed_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_below="@id/ed_age"
                android:layout_marginHorizontal="20dp"
                android:inputType="numberDecimal"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:elevation="5dp"
                android:hint="Height"
                android:padding="15dp"
                android:textColorHint="@color/teal_700"
                />

            <EditText
                android:id="@+id/ed_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@id/ed_height"
                android:layout_marginHorizontal="20dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext"
                android:elevation="5dp"
                android:hint="Email"
                android:padding="15sp"
                android:textColorHint="@color/teal_700"
                />



            <TextView
                android:id="@+id/ed_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@id/ed_mail"
                android:layout_marginHorizontal="20dp"
                android:inputType="text"
                android:hint="Gender"
                android:padding="15dp"
                android:textColorHint="@color/teal_700"
                />


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_below="@id/ed_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                >

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:checked="true"
                    android:paddingLeft="30dp"
                    android:paddingTop="2dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="5dp"
                    android:text="Male"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="2dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="5dp"
                    android:text="Female"
                    android:textColor="@color/black" />

            </RadioGroup>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/radioGroup"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="40dp"
                android:paddingVertical="8dp"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:textAllCaps="false"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/txt_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:text="@string/already_have_an_account"
                android:textColor="@color/black" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>