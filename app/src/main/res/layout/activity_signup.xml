<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/design_default_color_primary"
        android:visibility="gone" />

    <TextView
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up !"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-smallcaps"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/login_txt"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="text"
                android:hint="Name"
                android:textColorHint="@color/black"
                android:drawablePadding="10dp"
                android:maxLength="30"
                />

            <EditText
                android:id="@+id/ed_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_below="@id/ed_name"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="text"
                android:hint="Weight"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="8dp"
                android:textColorHint="@color/black"
                />


            <EditText
                android:id="@+id/ed_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_below="@id/ed_weight"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="phone"
                android:hint="Age"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="8dp"
                android:textColorHint="@color/black"
                android:maxLength="10"
                />

            <EditText
                android:id="@+id/ed_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_below="@id/ed_age"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="text"
                android:hint="Height"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                />


            <EditText
                android:id="@+id/ed_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@id/ed_height"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="text"
                android:hint="Sex"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                />

            <EditText
                android:id="@+id/ed_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_below="@id/ed_sex"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                />


            <Button
                android:id="@+id/signup_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_below="@id/ed_mail"
                android:paddingVertical="8dp"
                android:textSize="12dp"
                android:paddingHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"
                />


            <TextView
                android:id="@+id/get_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up !"
                android:textSize="20dp"
                android:layout_below="@+id/signup_btn"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_marginBottom="40dp"
                android:fontFamily="sans-serif-smallcaps"
                />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>